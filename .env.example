# Environment Configuration for Sepolia Deployment

# ============================================
# ETHEREUM RPC ENDPOINTS
# ============================================

# Get FREE API keys from:
# Alchemy: https://www.alchemy.com/ (Recommended)
# Infura: https://infura.io/

# Sepolia Testnet (for testing with your 0.1536 ETH)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_RPC_WSS=wss://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mainnet (for production - don't use yet)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ============================================
# WALLET CONFIGURATION
# ============================================

# Your MetaMask private key (KEEP SECRET!)
# To get: MetaMask → Account Details → Export Private Key
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Flashbots authentication (use same key)
FLASHBOTS_AUTH_KEY=your_private_key_here

# Flashbots relay URL
FLASHBOTS_RELAY_URL=https://relay-sepolia.flashbots.net

# ============================================
# CONTRACT ADDRESSES (Will be filled after deployment)
# ============================================

# SafeRouter (Hardened Contract)
SAFE_ROUTER_ADDRESS=0x90F45f3aebAe48328bE84c9d724152b46f234840

# VulnerableRouter (Weak Contract for comparison)
VULNERABLE_ROUTER_ADDRESS=0x3E75c835D47B93dd59C4Dd1B05717c8e43B7C401

# ============================================
# API KEYS
# ============================================

# Etherscan (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=JD1F8QMVM4YIPYVSKZ5M3ED57ZYRDZC5TF

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Which contract to monitor (switch for comparison)
TARGET_CONTRACT_ADDRESS=${SAFE_ROUTER_ADDRESS}

# Network to monitor
NETWORK=sepolia

# Port configuration
PORT=8080
WS_PORT=8081

# CORS
CORS_ORIGIN=*

# ============================================
# FRONTEND CONFIGURATION
# ============================================

NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8081
NEXT_PUBLIC_NETWORK=sepolia
NEXT_PUBLIC_CHAIN_ID=11155111

# ============================================
# FEATURE FLAGS
# ============================================

# Enable real Flashbots (false = demo mode)
ENABLE_REAL_FLASHBOTS=true

# Enable mempool scanning
ENABLE_MEMPOOL_SCAN=true

# Enable auto-attack mode (bot attacks all transactions automatically)
AUTO_ATTACK_ENABLED=true

# Report gas usage
REPORT_GAS=false
